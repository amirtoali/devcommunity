
<div class="card mt-2">
  <div class="card-body">
    <h4> Send connections </h4>
<div class=" row">
<% @conntected_connections .each do |connection| %>
<div class="d-flex mt-3 col-3" style="min-height: 30vh;">
  <div class="card text-center ms-1 shadow" style="min-width: 16rem;">
    <%= image_tag("user_img.jpeg", class: "rounded-circle mx-auto mt-3 border border-primary", style: "width: 120px;") %>
    <div class="card-body" >
      <h5 class="card-title" ><%= connection.connected_user.user_name %></h5>
      <p class="card-text">
       <%= connection.connected_user.perfile_title %>
        <div class="text-primary"><%= connection.connected_user.country %></div>
         <div class="text-primary"><%= connection.status%></div>
      </p>
    </div>
  </div>
</div>
<% end %>
</div>

<div class="card mt-2">
  <div class="card-body">
    <h4> Riceve connections </h4>
<div class=" row">
<% @connections.each do |connection| %>
<div class="d-flex mt-3 col-3" style="min-height: 30vh;">
  <div class="card text-center ms-1 shadow" style="min-width: 16rem;">
    <%= image_tag("user_img.jpeg", class: "rounded-circle mx-auto mt-3 border border-primary", style: "width: 120px;") %>
    <div class="card-body">
      <h5 class="card-title"><%= connection.user.user_name %></h5>
      <p class="card-text">
       <%= connection.user.perfile_title%>
        <div class="text-primary"><%= connection.user.user_name  %></div>
      </p>
      <div class="row">
        <% if connection.status == "accepted" %>
          <div class="text-primary"><%= connection.status%></div>
        <% else %> 
        <div class="col-5"><%= button_to 'Accpetped', connection, method: :patch, class: 'btn btn-primary' %></div>
        <div class="col-6"><%= button_to 'Disconnect', connection, method: :delete, class: 'btn btn-danger' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
<%= paginate @conntected_connections, outer_window: 3%>